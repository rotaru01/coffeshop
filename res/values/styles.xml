<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CustomEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">@dimen/edit_text_width</item>
    </style>
    
    <style name="CustomEditText.Register">
        <item name="android:background">@drawable/edit_text_signup</item>
        <item name="android:minHeight">@dimen/edit_text_height</item>
    </style>
    
    <style name="CustomEditText.Pin">
        <item name="android:background">@drawable/edit_text_pin_background</item>
        <item name="android:textSize">26sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="CustomRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_custom_background</item>
    </style>

    <style name="RegisterLabelText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/edit_text_hint_color</item>
        <item name="android:maxLines">2</item>
    </style>
    
</resources>